<UserControl x:Class="JobOverview.View.UCTaskConsultation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobOverview.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <TabControl>
            <TabItem Header="Taches annexes">
                <Grid>
                    <!--2 lignes et 3 colonnes-->
                    <!--#region Param Grid-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--#endregion-->
                    <!--Ligne 0-->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <DatePicker HorizontalAlignment="Right" VerticalAlignment="Top"/>
                    <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    </StackPanel>
                    
                    <!--Ligne 1-->
                    <ListView Grid.Row="1" ItemsSource="{Binding CurrentEmployee.ListTask}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Label" DisplayMemberBinding="{Binding Label}"/>
                                <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Activité" DisplayMemberBinding="{Binding Activity.Code}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView Grid.Row="1" Grid.Column="1"></ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Taches prod"></TabItem>
        </TabControl>   
    </Grid>
</UserControl>
