<UserControl x:Class="JobOverview.View.UCTaskCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobOverview.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>
    <DockPanel Background="White">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <ComboBox Name="cbSortPerSoftware">
                <ComboBoxItem Content="Logiciel" IsSelected="True"/>
            </ComboBox>
            <ComboBox Name="cbSortPerVersion">
                <ComboBoxItem Content="Version" IsSelected="True"/>
            </ComboBox>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox Name="tbxFilter" MinWidth="50"/>
                    <ComboBox Name="cbFilter">
                        <ComboBoxItem Content="Nom" IsSelected="True"/>
                        <ComboBoxItem Content="Identifiant"/>
                    </ComboBox>
                </StackPanel>
                <ListView Name="lvListEmployee" ItemsSource="{Binding Employee}" Margin="2.5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="N°" DisplayMemberBinding="{Binding FirstName}"/>
                            <GridViewColumn Header="Durée restante estimée" DisplayMemberBinding="{Binding LastName}"/>
                            <GridViewColumn Header="Activité" DisplayMemberBinding="{Binding Job.Label}"/>
                            <GridViewColumn Header="Libellé" DisplayMemberBinding="{Binding Productivity}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <CheckBox Name="chbTaskFinished" Content="Terminée" Height="{Binding ElementName=tbxFilter, Path=ActualHeight}" Margin="5"/>
                <TabControl TabStripPlacement="Top" Margin="2.5">
                    <TabItem Header="Tâches de production" Name="tabTaskProd">
                        <ListView Name="lvListTaskProd" ItemsSource="{Binding Employee/ListTask}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="N°" DisplayMemberBinding="{Binding Number}"/>
                                    <GridViewColumn Header="Durée restante estimée" DisplayMemberBinding="{Binding EstimatedRemainingTime}"/>
                                    <GridViewColumn Header="Activité" DisplayMemberBinding="{Binding Activity.Label}"/>
                                    <GridViewColumn Header="Terminée">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding EstimatedRemainingTime, Converter={StaticResource FloatToBoolConverter}}" BorderThickness="0" IsEnabled="False" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Libellé" DisplayMemberBinding="{Binding Label}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                    <TabItem Header="Tâches annexes" Name="tabTaskAnnex">
                        <ListView Name="lvListTaskAnnex" ItemsSource="{Binding Employee/ListTask}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="N°" DisplayMemberBinding="{Binding Label}"/>
                                    <GridViewColumn Header="Activité" DisplayMemberBinding="{Binding Activity.Label}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
